@model Sklep_internetowy.Models.Order

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/css/login.css" />
</head>



<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-3">
            @Html.Action("MainCategoriesMenu", "Home")
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            @using (Html.BeginForm("PayForOrder", "ShoppingCart", FormMethod.Post))
            {
                <div class="panel panel-success" style="margin-top:60px;">
                    <div class="panel-heading text-center"><h4>Dane do wysyłki</h4></div>
                    <div class="panel-body">

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="form-group position-relative">
                            <label>Imię: </label>
                            @Html.TextBoxFor(o => o.Firstname, new { @class = "form-control" })
                            <span class="position-absolute" style="top: 70px; left:0px; font-size:12px; color:red;">@Html.ValidationMessageFor(o => o.Firstname)</span>
                        </div>
                        <div class="form-group position-relative">
                            <label>Nazwisko: </label>
                            @Html.TextBoxFor(o => o.Lastname, new { @class = "form-control" })
                            <span class="position-absolute" style="top: 70px; left:0px; font-size:12px; color:red;">@Html.ValidationMessageFor(o => o.Lastname)</span>
                        </div>
                        <div class="form-group position-relative">
                            <label>Adres: </label>
                            @Html.TextBoxFor(o => o.Adress, new { @class = "form-control" })
                            <span class="position-absolute" style="top: 70px; left:0px; font-size:12px; color:red;">@Html.ValidationMessageFor(o => o.Adress)</span>
                        </div>
                        <div class="form-group position-relative">
                            <label>Miasto: </label>
                            @Html.TextBoxFor(o => o.City, new { @class = "form-control" })
                            <span class="position-absolute" style="top: 70px; left:0px; font-size:12px; color:red;">@Html.ValidationMessageFor(o => o.City)</span>
                        </div>
                        <div class="form-group position-relative">
                            <label>Kod pocztowy: </label>
                            @Html.TextBoxFor(o => o.ZipCode, new { @class = "form-control" })
                            <span class="position-absolute" style="top: 70px; left:0px; font-size:12px; color:red;">@Html.ValidationMessageFor(o => o.ZipCode)</span>
                        </div>
                        <div class="form-group position-relative">
                            <label>Telefon: </label>
                            @Html.TextBoxFor(o => o.PhoneNumber, new { @class = "form-control" })
                            <span class="position-absolute" style="top: 70px; left:0px; font-size:12px; color:red;">@Html.ValidationMessageFor(o => o.PhoneNumber)</span>
                        </div>
                        <div class="form-group position-relative">
                            <label>Email: </label>
                            @Html.TextBoxFor(o => o.Email, new { @class = "form-control" })
                            <span class="position-absolute" style="top: 70px; left:0px; font-size:12px; color:red;">@Html.ValidationMessageFor(o => o.Email)</span>
                        </div>

                        <div class="text-center">
                            <input class="btn btn-success" type="submit" value="Złóż zamówienie" id ="placeOrder" />
                        </div>



                    </div>
                </div>
            }

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>

@section Scripts
{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}



